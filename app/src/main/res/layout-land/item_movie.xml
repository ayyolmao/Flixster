<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/item_movie"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp">

    <ImageView
        android:id="@+id/ivBackdropImage"
        android:layout_width="345dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:adjustViewBounds="true"
        android:scaleType="fitXY"
        app:layout_constraintEnd_toStartOf="@+id/tvTitle"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/activity_main"
        tools:layout_conversion_wrapHeight="441"
        tools:layout_conversion_wrapWidth="906" />

    <TextView
        android:id="@+id/tvTitle"
        android:layout_width="373dp"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/ivBackdropImage"
        android:text="Movie Title"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
        app:layout_constraintBottom_toTopOf="@+id/tvOverview"
        app:layout_constraintStart_toEndOf="@+id/ivBackdropImage"
        tools:layout_conversion_wrapHeight="63"
        tools:layout_conversion_wrapWidth="230" />

    <TextView
        android:id="@+id/tvOverview"
        android:layout_width="366dp"
        android:layout_height="176dp"
        android:text="TextView"
        app:layout_constraintStart_toEndOf="@+id/ivBackdropImage"
        app:layout_constraintTop_toBottomOf="@+id/tvTitle"
        tools:layout_conversion_wrapHeight="84"
        tools:layout_conversion_wrapWidth="601" />
</androidx.constraintlayout.widget.ConstraintLayout>